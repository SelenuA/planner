<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="1dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="3dp"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/scdl_listitem_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/scdl_listitem_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="title"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/scdl_listitem_startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/scdl_listitem_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:text="date"
            android:textSize="13dp"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/scdl_listitem_enddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scdl_listitem_startdate"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="date"
            android:textSize="13dp"
            android:textColor="@color/text"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scdl_listitem_hiddenbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scdl_listitem_bg"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/scdl_listitem_info"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:text="Information #1 \n"
            android:textSize="12dp"
            android:textColor="@color/text"/>
        <ImageView
            android:id="@+id/scdl_listitem_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/delete" />

        <ImageView
            android:id="@+id/scdl_listitem_edit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/scdl_listitem_delete"
            android:layout_marginRight="16dp"
            android:src="@drawable/edit" />


    </RelativeLayout>

</RelativeLayout>