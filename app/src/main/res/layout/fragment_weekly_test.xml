<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_weight="3">
    <TextView
        android:id="@+id/scdl_wkly_yesterday"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="1"/>
    <TextView
        android:id="@+id/scdl_wkly_tomorrow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="2"/>
    <TextView
        android:id="@+id/scdl_wkly_thrdlater"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="3"/>
    <TextView
        android:id="@+id/scdl_wkly_today"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="4"/>
    <TextView
        android:id="@+id/scdl_wkly_twodlater"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="5"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="16">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scdl_wkly_yesterdaylist"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="yesterday"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scdl_wkly_tomorrowlist"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="yesterday"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scdl_wkly_thrdlaterlist"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="yesterday"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scdl_wkly_todaylist"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="yesterday"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scdl_wkly_twodlaterlist"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="yesterday"/>
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <TextView
            android:id="@+id/scdl_wkly_title"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="어쩔티비"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="4dp"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/scdl_wkly_info"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/scdl_wkly_title"
            android:layout_margin="4dp"
            android:textSize="12dp"
            android:text="info"/>

        <TextView
            android:id="@+id/scdl_wkly_enddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scdl_wkly_info"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="6dp"
            android:text="date" />
        <TextView
            android:id="@+id/scdl_wkly_startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/scdl_wkly_enddate"
            android:layout_alignTop="@id/scdl_wkly_enddate"
            android:layout_marginRight="3dp"
            android:text="date"/>
        <ImageView
            android:id="@+id/scdl_wkly_edit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/img_logo"/>
        <ImageView
            android:id="@+id/scdl_wkly_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/scdl_wkly_edit"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/img_logo"/>
    </RelativeLayout>
</LinearLayout>